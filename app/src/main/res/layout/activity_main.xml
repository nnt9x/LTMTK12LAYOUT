<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/boxOrange"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#faaa8d"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        />

    <View
        android:id="@+id/boxViolet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#aa8cfa"
        app:layout_constraintLeft_toRightOf="@id/boxOrange"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        />

    <View
        android:id="@+id/boxBlack"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="@+id/boxViolet"
        app:layout_constraintLeft_toLeftOf="@id/boxOrange"
        app:layout_constraintTop_toBottomOf="@id/boxViolet"
        android:layout_marginTop="50dp"
        />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boxBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/holo_green_dark"/>

    <View
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="@id/boxBlack"
        app:layout_constraintBottom_toBottomOf="@id/boxBlack"
        app:layout_constraintLeft_toRightOf="@id/boxBlack"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>